{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "sourceMap": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "baseUrl": "./",
    "allowJs": true,
    "resolveJsonModule": true,
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": [
    "./src", ".eslintrc.js", "./"
  ],
  "exclude": [
    "node_modules"
  ]
}
